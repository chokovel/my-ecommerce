<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Manager</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="style.css">
    <!-- <link
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
  rel="stylesheet"
/> -->
<style>
  img.card-img-top{
    height:250px;
    width:auto;/*maintain aspect ratio*/
    max-width:500px;
}
</style>
</head>
<body>
    <header>
        <!-- Navbar -->
        <section>
            <nav class="navbar bg-dark mb-2">
                <div class="container">
                  <a class="navbar-brand text-white" href="/">
                    <!-- <img src="/docs/5.2/assets/brand/bootstrap-logo.svg" alt="Bootstrap" width="30" height="24"> -->
                    Faith Fashion Stores
                  </a>
                  <ul class="nav justify-content-center">
                    <li class="nav-item">
                      <a class="nav-link text-white" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link text-white" href="/login">Login</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link  active text-white" href="/signup">Signup</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link  active text-white" href="#">Log Out</a>
                    </li>
                  </ul>
                </div>
              </nav>
        </section>
        <!-- Navbar -->
      
        <!-- Background image -->
        <div
          class="p-5 text-center bg-image"
          style="
            background-image: url('https://mdbcdn.b-cdn.net/img/new/slides/041.webp');
            height: 400px;
          "
        >
          <div class="mask" style="background-color: rgba(0, 0, 0, 0.6);">
            <div class="d-flex justify-content-center align-items-center h-100">
              <div class="text-white">
                <h1 class="mb-3">Faith Fashion Stores</h1>
                <h4 class="mb-3">Quality meets style...</h4>
                <a class="btn btn-outline-light btn-lg" href="#!" role="button"
                >Contact Us</a
                >
              </div>
            </div>
          </div>
        </div>
        <!-- Background image -->
      </header>
      <main>
        <div class="container text-center d-flex justify-content-center align-items-center h-100 p-5">
          <div class="row align-items-start">

      <!--  -->
     
        <% products.map(function(product){ %>
            <div class="col-md-3">
              <div class="card mb-3">
                <img src="<%=`${product.image}`%>" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%=product.name%></h5>
                  <p class="card-text"><%=product.description%></p>
                  <a href="#" class="btn btn-primary"><%=product.price%></a>
                  <a href="<%=`/show/${product.id}` %>" class="btn btn-primary">View</a>
                  <!-- <a href="/show" class="btn btn-primary">View</a> -->
                </div>
              </div>
            </div>
            <% }) %>
      <!--  -->

      
           
          </div>
        </div>
      </main>
      <footer class="bg-light text-center text-lg-start">
        <!-- Copyright -->
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
          Â© 2022 Copyright:
          <a class="text-dark" href="/">Faith Fashion Store</a>
        </div>
        <!-- Copyright -->
      </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <script
  type="text/javascript"
  src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.js"
></script>
</body>
</html>