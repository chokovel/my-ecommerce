<div class="container p-5 text-center">
    <h1>Product Table</h1>
</div>

<div class="container w-80">
    <a href="/addproduct" class="btn btn-sm btn-primary float-end m-4">Add Product</a>
    <table class="table table-success table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Image</th>
                <th scope="col">Product</th>
                <th scope="col">price</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
          <% products.map(function(product, ind){ %>
            <tr>
                <th scope="row"><%= ind + 1 %></th>
                <td> <img src="<%=`${product.image}`%>" width="75px" alt=""> </td>
                <td><%=`${product.name}`%></td>
                <td><%=`${product.price}`%></td>
                <td>
                  <div class="d-flex justify-content-start">
                    <a href="/editproduct/<%= product.id %>"><i style="color: yellow;" class="fa-solid fa-pen p-2"> Edit </i></a>
                    
                    <form method="POST" action="/product/<%= product.id %>?_method=DELETE">
                      <!-- <input type="hidden" name="_method" value="DELETE"> -->
                      <button type="submit" style="border: none; background: none;">  
                        <i style="color: red;" class="fa-solid fa-trash fa-danger p-2"> Delete</i>
                      </button>
                    </form>
                  </div> 
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
